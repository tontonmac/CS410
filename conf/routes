# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                    controllers.Application.index()

# Login Register
GET        /login               controllers.LoginRegister.login()

# Buy
GET        /buy                 controllers.Buying.buy()
GET		   /buy/books           controllers.Buying.listBooks()

# Book controller
GET        /book/new            controllers.Book.newBook()
GET        /book/edit           controllers.Book.editBook()
GET        /book/show           controllers.Book.showBook()
GET		   /book/delete         controllers.Book.deleteBook()

# Support
GET        /support             controllers.Support.support()

# Listings
GET     /listings                      controllers.Selling.listings()

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file        controllers.Assets.at(path="/public", file)
